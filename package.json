{
  "author": "owner-or-organization",
  "name": "@owner-or-organization/repository-name",
  "repository": {
    "type": "git",
    "url": "git://github.com/owner-or-organization/repository-name.git"
  },
  "type": "module",
  "version": "1.0.6",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/owner-or-organization"
  },
  "source": "src/index.ts",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "exports": {
    "default": "./dist/index.modern.mjs",
    "import": "./dist/index.modern.mjs",
    "require": "./dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.14",
    "npm": ">=8.12.1"
  },
  "scripts": {
    "auth:npm": "npm-cli-login -u $NPM_USER -p $NPM_PASS -e $NPM_EMAIL -r $NPM_REGISTRY -s $NPM_SCOPE",
    "postauth:npm": "cat ~/.npmrc",
    "prebuild": "rimraf dist",
    "build": "microbundle",
    "cop": "run-s format eslint test:ci",
    "prerelease": "git checkout main && git pull && run-s cop build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags --no-verify && npm publish",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "postinstall": "husky install && chmod ug+x .husky/*",
    "dev": "microbundle watch",
    "eslint": "eslint --fix --ext \"**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write \"{*,{src,test}/**/*}.+(css|json|js|jsx|ts|tsx)\"",
    "size": "size-limit",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=50%"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@jest/types": "^28.1.1",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "alias-hq": "^5.4.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "jest-when": "^3.5.1",
    "lint-staged": "^13.0.1",
    "microbundle": "^0.15.0",
    "npm-cli-login": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "size-limit": "^7.0.8",
    "standard-version": "^9.5.0",
    "start-server-and-test": "^1.14.0",
    "ts-jest": "^28.0.4",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3"
  }
}
